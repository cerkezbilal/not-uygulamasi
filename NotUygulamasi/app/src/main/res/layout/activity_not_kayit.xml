<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NotKayitActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="8dp" />

    <EditText
        android:id="@+id/editTextDers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="99dp"
        android:layout_marginTop="84dp"
        android:layout_marginEnd="99dp"
        android:ems="10"
        android:hint="Ders AdÄ±"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar" />

    <EditText
        android:id="@+id/editTextNot1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:ems="10"
        android:hint="1.Not"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/editTextDers"
        app:layout_constraintStart_toStartOf="@+id/editTextDers"
        app:layout_constraintTop_toBottomOf="@+id/editTextDers" />

    <EditText
        android:id="@+id/editTextNot2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:ems="10"
        android:hint="2.Not"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/editTextNot1"
        app:layout_constraintStart_toStartOf="@+id/editTextNot1"
        app:layout_constraintTop_toBottomOf="@+id/editTextNot1" />

    <Button
        android:id="@+id/buttonKaydet"
        android:layout_width="213dp"
        android:layout_height="48dp"
        android:layout_marginTop="44dp"
        android:text="Kaydet"
        app:layout_constraintEnd_toEndOf="@+id/editTextNot2"
        app:layout_constraintStart_toStartOf="@+id/editTextNot2"
        app:layout_constraintTop_toBottomOf="@+id/editTextNot2" />
</android.support.constraint.ConstraintLayout>