<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/not_card"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="1dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textViewDers"
                android:layout_width="92dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="40dp"
                android:layout_marginTop="15dp"
                android:text="Tarih"
                android:textColor="#F13674"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textViewNot1"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/textViewDers"
                android:layout_marginStart="83dp"
                android:layout_marginTop="2dp"
                android:layout_toEndOf="@+id/textViewDers"
                android:text="50"
                android:textColor="#045594"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textViewNot2"
                android:layout_width="41dp"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/textViewNot1"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="95dp"
                android:layout_marginTop="1dp"
                android:layout_marginEnd="27dp"
                android:layout_toEndOf="@+id/textViewNot1"
                android:text="100"
                android:textStyle="bold" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>